@model ProjetoCoffeeShoopSaoPaulo.Models.Usuario.Usuario

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Editar</h2>

<h4 class="text-center text-primary">Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-10 offset-md-1">
        <form method="post" enctype="multipart/form-data" asp-controller="Usuario" asp-action="Editar">
            @*<input type="hidden" name="_method" value="put" />*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="id" value="@Model.Id" />

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label" style="font-weight:bold;">Nome</label>
                <input asp-for="Nome" name="Nome" class="form-control" value="@Model.Nome" />
                @Html.ValidationMessage("Nome", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label" style="font-weight:bold;">E-mail</label>
                <input asp-for="Email" name="Email" class="form-control" value="@Model.Email" />
                @Html.ValidationMessage("Email", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label asp-for="Senha" class="control-label" style="font-weight:bold;">Senha</label>
                <input asp-for="Senha" name="Senha" class="form-control" type="password" />
                @Html.ValidationMessage("Senha", new { @class = "text-danger" })
            </div>
         

            <div class="form-group float-end">

                <div class="d-grid gap-2">
                    <input type="submit" value="Atualizar" class="btn btn-primary btn-block" />
                    <a href="@Url.Action("Index", "Usuario")" class="btn btn-outline-warning btn-block">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>



