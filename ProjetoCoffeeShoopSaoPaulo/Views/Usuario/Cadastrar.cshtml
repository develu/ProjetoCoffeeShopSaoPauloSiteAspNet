@model ProjetoCoffeeShoopSaoPaulo.Models.Usuario.request.UsuarioRequest

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Cadastrar</h2>

<h4 class="text-center text-primary">Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-10 offset-md-1">
        <form method="post" enctype="multipart/form-data" asp-controller="Usuario" asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="Nome" class="control-label" style="font-weight:bold;">Nome</label>
                <input name="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label" style="font-weight:bold;">E-mail</label>
                <input name="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Senha" class="control-label" style="font-weight:bold;">Senha</label>
                <input name="Senha" class="form-control" type="password" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            
            <hr />
            <div class="form-group float-end">

                <div class="d-grid gap-2">
                    <input type="submit" value="Cadastrar" class="btn btn-primary btn-block" />
                    <a href="@Url.Action("Index", "Usuario")" class="btn btn-outline-warning btn-block">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>


